<% pending_approvals.each do |e| %>
  <div class="homepage-block col-md-3">
    <h4>
      <%= e.user.full_name %>
    </h4>  

    <p>
      <span class = "pending-details">Date Submitted: </span> <%= e.date %>
    </p>

    <p>
      <span class = "pending-details">Rationale: </span> <%= truncate e.rationale, length: 42 %>
    </p>  

    <div class = "row">
      <div class = "col-md-6 column">
        <%= link_to 'Approved', root_path, class: 'btn btn-success btn-block' %>
      </div>

      <div class = "col-md-6 column">
        <%= link_to 'Review', root_path, class: 'btn btn-warning btn-block' %>
      </div>
    </div>
  </div>
<% end %>